{
  "name": "my-starter-kit",
  "version": "0.1.0",
  "description": "웹 브라우저 기반 2D 게임 개발 스타터킷",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "build:website": "npm run build && powershell -Command \"Copy-Item -Path 'dist\\*' -Destination 'website\\game\\' -Recurse -Force\"",
    "serve:website": "npx http-server website -p 8080 -c-1"
  },
  "dependencies": {
    "phaser": "^3.85.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1",
    "terser": "^5.46.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
